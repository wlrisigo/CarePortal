<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundfinal"
>

    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="wrap_content"


        android:orientation="vertical">
        <!-- EditText for entering a phone number  -->

        <TextView
            android:id="@+id/Text3"
            android:layout_width="269dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="textPersonName"
            android:text="District 1"
            android:textColor="#900000"
            android:textSize="35sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/phone_icon"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="right"
            android:layout_margin="30dp"
            android:contentDescription="@string/make_a_call"
            android:onClick="callNumber1"
            android:src="@drawable/call"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Text4"
            android:layout_width="269dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="textPersonName"
            android:text="District 2"
            android:textColor="#000000"
            android:textSize="35sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/phone_icon1"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="right"
            android:layout_margin="30dp"

            android:contentDescription="@string/make_a_call"
            android:onClick="callNumber2"
            android:src="@drawable/call"
            android:visibility="visible" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="134dp"
        android:layout_height="551dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/text_main1"
            android:layout_width="237dp"
            android:layout_height="40dp"

            android:layout_margin="15dp"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:text="(802-777-7928)"
            android:textColor="#900000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_main2"
            android:layout_width="124dp"
            android:layout_height="384dp"

            android:layout_margin="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="phone"
            android:text="(617-817-3687)"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:id="@+id/button_retry"
        android:layout_width="36dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"

        android:contentDescription="@string/retry"
        android:onClick="retryApp"
        android:text="@string/retry"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/incoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_retry"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="24sp"
        android:visibility="invisible"
        android:text="erere"/>


</LinearLayout>